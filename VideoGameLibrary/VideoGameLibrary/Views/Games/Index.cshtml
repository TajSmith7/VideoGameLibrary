@model IEnumerable<VideoGameLibrary.Models.Game>

<h2>Games</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Game</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Release Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.ReleaseDate?.ToShortDateString()</td>
                <td>@game.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@game.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@game.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

